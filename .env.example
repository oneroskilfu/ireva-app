# === iREVA Platform Environment Variables ===
# Copy this file to .env and update with your actual values
# This template can safely be committed to version control

# === Backend Environment Variables ===
DATABASE_URL=postgresql://user:password@host:port/dbname
REDIS_URL=redis://default:password@host:port
JWT_SECRET=your_jwt_secret_here
NODE_ENV=production
PORT=5000

# === Frontend Environment Variables ===
VITE_API_URL=https://your-backend-domain.com/api
VITE_ENVIRONMENT=production

# === Database Configuration (Docker Compose) ===
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password
POSTGRES_DB=your_database_name

# === Authentication & Security ===
JWT_EXPIRES_IN=7d
TWO_FACTOR_AUTH_SECRET=your_2fa_secret
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# === CORS Configuration ===
CLIENT_ORIGIN=https://your-frontend-domain.com
CORS_ORIGIN=https://your-frontend-domain.com

# === Email Service ===
ADMIN_EMAIL=admin@yourdomain.com
SENDGRID_API_KEY=your_sendgrid_api_key

# === Optional: Crypto Integration ===
CRYPTO_PAYMENT_WEBHOOK_SECRET=your_webhook_secret
BLOCKCHAIN_RPC_URL=https://your-blockchain-rpc-endpoint

# === Optional: File Upload ===
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx